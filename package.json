{
  "name": "bullmq-demo",
  "version": "1.0.0",
  "description": "Bull MQ + Bull Board Demo with PM2 - Separated Workers",
  "main": "dist/server.js",
  "scripts": {
    "dev:server": "tsx src/server.ts",
    "dev:workers": "tsx src/workers.ts",
    "build": "tsc",
    "start:server": "node dist/server.js",
    "start:workers": "node dist/workers.js",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:delete": "pm2 delete ecosystem.config.js",
    "pm2:logs": "pm2 logs",
    "pm2:monit": "pm2 monit",
    "pm2:logs:server": "pm2 logs bullmq-server",
    "pm2:logs:workers": "pm2 logs bullmq-workers"
  },
  "dependencies": {
    "@bull-board/api": "^6.15.0",
    "@bull-board/express": "^6.15.0",
    "bullmq": "^5.66.0",
    "express": "^5.2.1",
    "pm2": "^6.0.14"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
